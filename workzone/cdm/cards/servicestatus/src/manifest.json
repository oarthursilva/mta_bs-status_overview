{
    "_version": "1.25.0",
    "sap.app": {
        "id": "cards.servicestatus",
        "type": "card",
        "title": "{{title}}",
        "subTitle": "{{subtitle}}",
        "description": "{{description}}",
        "applicationVersion": {
            "version": "1.0.0"
        },
        "tags": {
            "keywords": [
                "List",
                "Card",
                "Grouping"
            ]
        }
    },
    "sap.ui": {
        "technology": "UI5",
        "deviceTypes": {
            "phone": true,
            "tablet": true,
            "desktop": true
        },
        "icons": {
            "icon": "sap-icon://list"
        }
    },
    "sap.card": {
        "type": "Table",
        "configuration": {
            "editor": "dt/configuration",
            "filters": {
                "searchQuery": {
                    "type": "Search",
                    "label": "{{componentName}}",
                    "placeholder": "{{componentNamePlaceholder}}"
                }
            },
            "parameters": {
                "title": {
                    "value": "{{title}}"
                },
                "subtitle": {
                    "value": "{{subtitle}}"
                },
                "maxItems": {
                    "value": 4
                }
            }
        },
        "data": {
            "request": {
                "url": "",
                "parameters": {
                    "$filter": "contains(ComponentName, '{filters>/searchQuery/value}')",
                    "$count": true
                }
            }
        },
        "header": {
            "title": "{{title}}",
            "subTitle": "{{subtitle}}",
            "icon": {
                "src": "sap-icon://order-status"
            },
            "actions": [
                {
                    "type": "Navigation",
                    "parameters": {
                        "url": "http://hugoboss.com"
                    }
                }
            ]
        },
        "content": {
            "data": {
                "json": [
                    {
                        "ComponentName": "F1.Management",
                        "Status": "Success",
                        "Date": ""
                    },
                    {
                        "ComponentName": "F2.Product Development",
                        "Status": "Success",
                        "Date": ""
                    },
                    {
                        "ComponentName": "F3.Sales",
                        "Status": "Success",
                        "Date": ""
                    },
                    {
                        "ComponentName": "F4.Procurement & Production",
                        "Status": "Warning",
                        "Date": "9 Sept 2025 9:00:00 am"
                    },
                    {
                        "ComponentName": "F5.Distribution & Logistics",
                        "Status": "Warning",
                        "Date": "9 Sept 2025 10:00:00 am"
                    },
                    {
                        "ComponentName": "F6.Retail",
                        "Status": "Success",
                        "Date": ""
                    },
                    {
                        "ComponentName": "S1.FICO",
                        "Status": "Success",
                        "Date": ""
                    },
                    {
                        "ComponentName": "S2.Marketing",
                        "Status": "Error",
                        "Date": "9 Sept 2025 11:00:00 am"
                    }
                ]
            },
            "row": {
                "highlight": "{Status}",
                "actions": [
                    {
                        "type": "Navigation",
                        "parameters": {
                            "url": "http://hugoboss.com"
                        }
                    }
                ],
                "columns": [
                    {
                        "title": "Current status",
                        "value": "{ComponentName}",
                        "state": "{Status}",
                        "showStateIcon": true
                    },
                    {
                        "title": "Date",
                        "value": "{Date}",
                        "hAlign": "Center"
                    }
                ]
            },
            "maxItems": 0
        }
    },
    "sap.platform.mobilecards": {
        "compatible": true
    }
}